<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textSize="35dp"
        android:text="Welcome" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"

        android:inputType="textPersonName"
        android:hint=" Enter Your Name "

        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/createTableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEditText"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="79dp"
        android:text="Create Table" />

    <Button
        android:id="@+id/joinTableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createTableButton"
        android:padding="20dp"

        android:layout_marginTop="73dp"
        android:text="Join Table"
        android:layout_alignLeft="@+id/createTableButton"
        android:layout_alignStart="@+id/createTableButton"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>