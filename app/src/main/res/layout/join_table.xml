<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<EditText
    android:id="@+id/enterLinkEditText"
    android:hint="Paste Link To Join Table"
    android:layout_width="match_parent"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:textSize="30dp"
    android:layout_height="wrap_content" />

    <Button
        android:id="@+id/joinTableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enterLinkEditText"
        android:layout_alignStart="@+id/enterLinkEditText"
        android:layout_below="@+id/enterLinkEditText"
        android:padding="25dp"
        android:layout_marginLeft="121dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="85dp"
        android:text="Join Table" />
</RelativeLayout>