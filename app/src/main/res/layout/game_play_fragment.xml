<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<EditText
    android:id="@+id/tableLinkEditText"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:textColor="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView

        android:id="@+id/mainTextview"
        android:layout_marginTop="36dp"
    android:layout_width="match_parent"
    android:layout_height="375dp" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:padding="10dp"
        android:progress="3"
        android:layout_below="@+id/mainTextview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/betBiutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableLinkEditText"
        android:layout_alignStart="@+id/tableLinkEditText"
        android:layout_below="@+id/seekBar"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:text="BET" />

    <Button
        android:id="@+id/takeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/betBiutton"
        android:layout_alignEnd="@+id/tableLinkEditText"
        android:layout_alignRight="@+id/tableLinkEditText"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="TAKE" />

</RelativeLayout>